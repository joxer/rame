


class Modify

  def initialize(name)

    @name = name
    @file = File.new("m/#{name}.eruby", "r+")

  end

  def transform
    p @file
    links = @file.readlines.scan(/:link_to.*/)
    for i in links
      h = i.gsub(":link_to", "").split(";")
      i = "<a href='#{h[0]}'>#{h[1]}</a>"
      
    end
    p @file
  end
  

end
